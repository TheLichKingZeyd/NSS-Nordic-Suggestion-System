@model NordicDoorSuggestionSystem.Models.Administrate.EditDepartmentViewModel
@{
    Layout = "~/Views/Shared/_department.cshtml";
}

<br>
<div class="row">
    <h1>Endre Avdeling '@Model.DepartmentName'</h1>
    <div class="col-md-4">
        <form asp-action="EditDepartment" method="post">
            <input asp-for="DepartmentID" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DepartmentName" class="control-label">Avdelingsnavn</label>
                <input asp-for="DepartmentName" class="form-control" />
                <span asp-validation-for="DepartmentName" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Godkjenn" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}