@model NordicDoorSuggestionSystem.Models.Administrate.CreateDepartmentViewModel
@{
    Layout = "~/Views/Shared/_department.cshtml";
}

<br>
<div class="row">
    <h4>Lag en ny avdeling!</h4>
    <div class="col-md-4">
        <form asp-action="CreateDepartment" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DepartmentName" class="control-label">Avedlingsnavn</label>
                <input asp-for="DepartmentName" class="form-control" />
                <span asp-validation-for="DepartmentName" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Lag Avdeling" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}