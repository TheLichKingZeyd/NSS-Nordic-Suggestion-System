@using NordicDoorSuggestionSystem.Entities
@model IEnumerable<Team>

@{
    Layout ="~/Views/Shared/_team.cshtml";
}

<br>
<h1>Teams</h1>

<a asp-action="CreateTeam" asp-controller="Administration" class="btn btn-success" >Lag Nytt Team</a>
<a asp-action="EditTeamMembers" asp-controller="Administration" class="btn btn-info">Velg Team Medlemmer</a>
<br><br>

<table class="table">
    <thead>
        <tr>
            <th>
                <i>Teamnavn</i>
            </th>
            <th>
                <i>Teamleder</i>
            </th>
            <th>
                <i>Forslag</i>
            </th>
            <th>
                <i>Avdeling</i>
            </th>
            <th></th>
        </tr>
    </thead>

@if(Model.Any())
{
        <tbody>
            @foreach (var team in Model)
            {
                <tr>
                    <th>
                        @Html.DisplayFor(modelItem => team.TeamName)
                    </th>
                    <th>
                        @Html.DisplayFor(modelItem => team.TeamLeader)
                    </th>
                    <th>
                        @Html.DisplayFor(modelItem => team.TeamSgstnCount)
                    </th>
                    <th>
                        @Html.DisplayFor(modelItem => team.DepartmentID)
                    </th>
                    <td>
                        <a asp-action="EditTeam" asp-route-id="@team.TeamID">Edit</a> |
                        <a asp-action="DeleteTeam" asp-route-id="@team.TeamID">Delete</a> |
                        <a asp-action="DetailsMembers" asp-route-id="@team.TeamID">Medlemmer</a>
                    </td>
                </tr>
            }
        </tbody>
} else {
    <h2>Systemet har ingen team</h2>
}
</table>