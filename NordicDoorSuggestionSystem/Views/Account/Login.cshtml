@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Identity
@using NordicDoorSuggestionSystem.Entities
@using NordicDoorSuggestionSystem.Models.Account
@model LoginViewModel
@inject SignInManager<User> SignInManager

@{
    ViewData["Title"] = "Log in";
}
@{
    ViewBag.Title = "LogIn § NSS";
    Layout = "~/Views/Shared/_LogInLayout.cshtml";
}


<div class="containerLogIn">
    <div class="boxContainerLogIn">
        <div class="LoginHeader">
            <h1>Logg Inn</h1>
        </div>
        <center>
            <div class="loginContent">
                <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" role="form">


                    <div class="form-group">
                        <label asp-for="EmployeeNumber" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="EmployeeNumber" class="form-control" /> <br />
                            <span asp-validation-for="EmployeeNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Password" class="form-control" /> <br />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="checkbox">
                                <label asp-for="RememberMe">
                                    <input asp-for="RememberMe" />
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                            </div>
                        </div>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-default">Log in</button>
                        </div>
                    </div>
                </form>
    </div>
        </center>
    </div>      
</div>

